<import src="../../template/mask.wxml"/>
<template is="mask" data="{{flag}}"></template>

<view class="page">
    <block wx:if="{{care==1}}">
        <view class="page__hd" style="border-bottom: 1rpx solid rgba(0,0,0,.1);">
            <view class="page__title" style="padding-left:16px;">立即下单</view>
            <text style="color:red;padding-left:16px;">当天服务</text>
        </view>
        <view class="page__bd">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell" style="padding: 4px 16px;">
                    <view class="weui-cell__hd">
                        <view class="weui-label">区域:</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSexChange" value="{{regionIndex}}" range="{{regions}}" range-key="name">
                            <view class="weui-select">{{regions[regionIndex].name}}</view>
                        </picker>
                    </view>
                </view>
            </view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">优惠码:</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="请输入" value="{{ycode}}" bindchange="bindYcodeChange"/>
                    </view>
                </view>
            </view>
            <view class="weui-cells__title" style="border-bottom: 1rpx solid rgba(0,0,0,.1);">服务价格</view>
            <view class="weui-cells weui-cells_after-title">
                <radio-group bindchange="radioChange1">
                    <label class="weui-cell weui-check__label" wx:for="{{radioItems1}}" wx:key="value">
                        <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
                        <view class="weui-cell__bd">{{item.name}}</view>
                        <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                            <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                        </view>
                    </label>
                </radio-group>
            </view>
            <view class="weui-cells__title">
                <button class="weui-btn" type="primary" bindtap="submitForm">立即下单</button>
            </view>
        </view>
    </block>
    <block wx:else>
        <view class="page__hd" style="border-bottom: 1rpx solid rgba(0,0,0,.1);">
            <view class="page__title" style="padding-left:16px;">预约下单</view>
            <text style="color:red;padding-left:16px;">预订时间服务</text>
        </view>
        <view class="page__bd">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell" style="padding: 4px 16px;">
                    <view class="weui-cell__hd">
                        <view class="weui-label">区域:</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker bindchange="bindSexChange" value="{{regionIndex}}" range="{{regions}}" range-key="name">
                            <view class="weui-select">{{regions[regionIndex].name}}</view>
                        </picker>
                    </view>
                </view>
            </view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">优惠码:</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="请输入" value="{{ycode}}" bindchange="bindYcodeChange"/>
                    </view>
                </view>
            </view>
            <view class="weui-cells__title" style="border-bottom: 1rpx solid rgba(0,0,0,.1);">服务价格</view>
            <view class="weui-cells weui-cells_after-title">
                <radio-group bindchange="radioChange2">
                    <label class="weui-cell weui-check__label" wx:for="{{radioItems2}}" wx:key="value">
                        <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
                        <view class="weui-cell__bd">{{item.name}}</view>
                        <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                            <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                        </view>
                    </label>
                </radio-group>
            </view>
            <view class="weui-cell mycells">
                <view class="weui-cell__hd">
                    <view class="weui-label">预订日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{dateStart}}" start="{{start}}" bindchange="bindDateChange1">
                        <view class="weui-input">{{dateStart}}</view>
                    </picker>
                </view>
                <text class="dmark">至</text>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{dateEnd}}" start="{{start}}" bindchange="bindDateChange2">
                        <view class="weui-input">{{dateEnd}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cells__title">
                <button class="weui-btn" type="primary" bindtap="submitForm1">预约下单</button>
            </view>
        </view>
    </block>
</view>